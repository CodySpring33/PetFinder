<!DOCTYPE html>
<html>

<head>
  <title>TailWag</title>
  <link rel="stylesheet" href="css/style2.css">
  <link rel="stylesheet" href="css/custom.css">
</head>

<body>
  <header>
    <div class="header-container">
      <div class="logo-container">
        <h1>TailWag</h1>
      </div>
      <nav>
        <ul>
          <li><a href="#" onclick="location.href='/home'">Home</a></li>
          <li><a href="/content">Pet Swipe</a></li>
          <li><a href="#" id="more-pets-link"> More Pets </a></li>
          <li><a href="#" id="logout-link">Logout</a></li>
        </ul>
      </nav>
  </header>

  <main>
    <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample"
      aria-controls="offcanvasExample">
      Filter
    </button>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
      <div class="offcanvas-header">
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>

      <div class="offcanvas-body">
        <div class="filterContainer">
          <div class="row">
            <div class="col">
              <div class="card">

                <article class="card-group-item">
                  <header class="card-header">
                    <h6 class="title">Species</h6>
                  </header>
                  <div class="filter-content">
                    <div class="card-body">
                      <form>
                        <label class="form-check">
                          <input data-category="breed" data-filter="dog" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Dog
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="breed" data-filter="cat" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Cat
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="breed" data-filter="bird" class="form-check-input" onchange="addFilter(this)"
                            type="checkbox" value="">
                          <span class="form-check-label">
                            Bird
                          </span>
                        </label>
                      </form>
                    </div>
                  </div> <!-- card-body.// -->
                </article> <!-- card-group-item.// -->

                <article class="card-group-item">
                  <header class="card-header">
                    <h6 class="title">Dog Breeds</h6>
                  </header>
                  <div class="filter-content">
                    <div class="card-body">
                      <form>
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="French_Bulldog" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            French Bulldogs
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Labrador_Retriever" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Labrador Retrievers
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Golden_Retriever" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Golden Retrievers
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="German_Shepherd" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            German Shepherd Dogs
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Poodle" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Poodles
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Bulldog" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Bulldogs
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Rottweiler" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Rottweilers
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Beagle" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Beagles
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="Dachshund" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Dachshunds
                          </span>
                        </label> <!-- form-check.// -->
                        <label class="form-check">
                          <input data-category="Dog_Breed" data-filter="German_Shorthaired_Pointer"
                            class="form-check-input" onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            German Shorthaired Pointers
                          </span>
                        </label> <!-- form-check.// -->
                      </form>
                    </div>
                  </div> <!-- card-body.// -->
                </article> <!-- card-group-item.// -->

                <article class="card-group-item">
                  <header class="card-header">
                    <h6 class="title">Color</h6>
                  </header>
                  <div class="filter-content">
                    <div class="card-body">
                      <form>
                        <label class="form-check">
                          <input data-category="color" data-filter="black" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Black
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="color" data-filter="white" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            White
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="color" data-filter="brown" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Brown
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="color" data-filter="red" class="form-check-input" onchange="addFilter(this)"
                            type="checkbox" value="">
                          <span class="form-check-label">
                            Red
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="color" data-filter="gold" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Gold
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="color" data-filter="gray" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Gray
                          </span>
                        </label>
                      </form>
                    </div>
                  </div> <!-- card-body.// -->
                </article> <!-- card-group-item.// -->

                <article class="card-group-item">
                  <header class="card-header">
                    <h6 class="title">Coat</h6>
                  </header>
                  <div class="filter-content">
                    <div class="card-body">
                      <form>
                        <label class="form-check">
                          <input data-category="coat" data-filter="short" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Short
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="coat" data-filter="medium" class="form-check-input"
                            onchange="addFilter(this)" type="checkbox" value="">
                          <span class="form-check-label">
                            Medium
                          </span>
                        </label>
                        <label class="form-check">
                          <input data-category="coat" data-filter="long" class="form-check-input" onchange="addFilter(this)"
                            type="checkbox" value="">
                          <span class="form-check-label">
                            Long
                          </span>
                        </label>
                      </form>
                    </div>
                  </div> <!-- card-body.// -->
                </article> <!-- card-group-item.// -->


              </div>
            </div> <!-- card.// -->
          </div>
        </div>
      </div>

    </div>

    <div id="my-grid" class="container mt-5 grid-container">
      <div data-lastID="" id="my-container">
        <% for (let i=0; i < posts.length; i+=3) { %>
          <div class="row mt-3">
            <% for (let j=i; j < i + 3 && j < posts.length; j++) { %>
              <div class="col-sm-4 grid-item">
                <div class="card gridCard">
                  <img src="img/max.jpg" class="card-img-top">
                  <h5 class="card-title">
                    <%=posts[j].name%>
                  </h5>
                  <p class="card-text">
                    <%=posts[j].description%>
                  </p>
                </div>
              </div>
              <% } %>
          </div>
          <% } %>
      </div>
    </div>

  </main>

  <footer>
    <p id="footer">&copy; 2023 Pet Posts</p>
  </footer>
  <script src="js/logout.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="js/loadmoreitems.js"></script>
</body>

</html>